{
  "openapi": "3.1.0",
  "info": {
    "title": "OpenApi specification - Georgi",
    "description": "OpenApi documentation for Spring security",
    "contact": { "name": "Georgi Ivanov", "email": "Georgi_Ivanov92@pm.me" },
    "license": { "name": "MIT" },
    "version": "1.0"
  },
  "servers": [{ "url": "http://localhost:8088/api/v1", "description": "Local ENV" }],
  "paths": {
    "/users/register": {
      "post": {
        "tags": ["user-controller"],
        "operationId": "registerUser",
        "requestBody": {
          "content": {
            "application/json": { "schema": { "$ref": "#/components/schemas/RegisterUserRequest" } }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/RegisterUserResponse" }
              }
            }
          }
        }
      }
    },
    "/sleeves/save": {
      "post": {
        "tags": ["sleeve-controller"],
        "operationId": "saveSleeve",
        "requestBody": {
          "content": {
            "application/json": { "schema": { "$ref": "#/components/schemas/SaveSleeveRequest" } }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/SleeveResponse" } }
            }
          }
        }
      }
    },
    "/sleeves/update/{id}": {
      "patch": {
        "tags": ["sleeve-controller"],
        "operationId": "updateSleeve",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer", "format": "int64" }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": { "schema": { "type": "object", "additionalProperties": {} } }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/SleeveResponse" } }
            }
          }
        }
      }
    },
    "/sleeves": {
      "get": {
        "tags": ["sleeve-controller"],
        "operationId": "getSleeveSequenceNumber",
        "parameters": [
          {
            "name": "sequence",
            "in": "query",
            "required": true,
            "schema": { "type": "integer", "format": "int32" }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/SleeveResponse" }
                }
              }
            }
          }
        }
      }
    },
    "/sleeves/{sleeveNumber}": {
      "get": {
        "tags": ["sleeve-controller"],
        "operationId": "getSleeveNumber",
        "parameters": [
          {
            "name": "sleeveNumber",
            "in": "path",
            "required": true,
            "schema": { "type": "integer", "format": "int32" }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/SleeveResponse" } }
            }
          }
        }
      }
    },
    "/sleeves/warehouse/{warehouseId}": {
      "get": {
        "tags": ["sleeve-controller"],
        "operationId": "getAllSleevesInWarehouse",
        "parameters": [
          {
            "name": "pageable",
            "in": "query",
            "required": true,
            "schema": { "$ref": "#/components/schemas/Pageable" }
          },
          {
            "name": "warehouseId",
            "in": "path",
            "required": true,
            "schema": { "type": "integer", "format": "int64" }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/PageSleeveResponse" }
              }
            }
          }
        }
      }
    },
    "/sleeves/delete/{id}": {
      "delete": {
        "tags": ["sleeve-controller"],
        "operationId": "deleteSleeve",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer", "format": "int64" }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/SleeveResponse" } }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "RegisterUserRequest": {
        "type": "object",
        "properties": {
          "firstName": { "type": "string", "maxLength": 30, "minLength": 0 },
          "lastName": { "type": "string", "maxLength": 30, "minLength": 0 },
          "personalNumber": { "type": "string", "pattern": "\\d{8}" },
          "password": { "type": "string", "minLength": 1 }
        },
        "required": ["firstName", "lastName", "password"]
      },
      "RegisterUserResponse": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "format": "int64" },
          "firstName": { "type": "string" },
          "lastName": { "type": "string" },
          "personalNumber": { "type": "integer", "format": "int32" },
          "createdDate": { "type": "string" }
        }
      },
      "SaveSleeveRequest": {
        "type": "object",
        "properties": {
          "sequenceNumber": { "type": "integer", "format": "int32" },
          "sleeveNumber": { "type": "integer", "format": "int32" },
          "design": { "type": "string", "minLength": 1 },
          "color": { "type": "string", "minLength": 1 },
          "manufacturer": { "type": "string", "minLength": 1 },
          "notes": { "type": "string" },
          "gear": { "type": "integer", "format": "int32" },
          "circumference": { "type": "integer", "format": "int32" },
          "slot": { "type": "integer", "format": "int32" },
          "manufactureDate": { "type": "string", "format": "date" },
          "width": { "type": "integer", "format": "int32" },
          "kmStand": { "type": "integer", "format": "int64" },
          "warehouse": { "type": "string" },
          "status": { "type": "string" },
          "type": {
            "type": "string",
            "enum": ["PAINT", "FLAT", "LACK", "NON_FLAT"],
            "minLength": 1
          },
          "condition": { "type": "string", "enum": ["DAMAGED", "NEW", "USED"], "minLength": 1 }
        },
        "required": [
          "circumference",
          "color",
          "condition",
          "design",
          "gear",
          "manufactureDate",
          "manufacturer",
          "sequenceNumber",
          "sleeveNumber",
          "slot",
          "type",
          "warehouse",
          "width"
        ]
      },
      "SleeveResponse": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "format": "int64" },
          "sequenceNumber": { "type": "integer", "format": "int32" },
          "sleeveNumber": { "type": "integer", "format": "int32" },
          "design": { "type": "string" },
          "color": { "type": "string" },
          "manufacturer": { "type": "string" },
          "notes": { "type": "string" },
          "gear": { "type": "integer", "format": "int32" },
          "circumference": { "type": "integer", "format": "int32" },
          "slot": { "type": "integer", "format": "int32" },
          "manufactureDate": { "type": "string", "format": "date" },
          "width": { "type": "integer", "format": "int32" },
          "kmStand": { "type": "integer", "format": "int64" },
          "warehouse": { "$ref": "#/components/schemas/WarehouseResponse" },
          "status": { "type": "string" },
          "type": { "type": "string", "enum": ["PAINT", "FLAT", "LACK", "NON_FLAT"] },
          "condition": { "type": "string", "enum": ["DAMAGED", "NEW", "USED"] }
        }
      },
      "WarehouseResponse": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "format": "int64" },
          "name": { "type": "string", "enum": ["G", "L3", "L1"] }
        }
      },
      "Pageable": {
        "type": "object",
        "properties": {
          "page": { "type": "integer", "format": "int32", "minimum": 0 },
          "size": { "type": "integer", "format": "int32", "minimum": 1 },
          "sort": { "type": "array", "items": { "type": "string" } }
        }
      },
      "PageSleeveResponse": {
        "type": "object",
        "properties": {
          "totalElements": { "type": "integer", "format": "int64" },
          "totalPages": { "type": "integer", "format": "int32" },
          "pageable": { "$ref": "#/components/schemas/PageableObject" },
          "first": { "type": "boolean" },
          "last": { "type": "boolean" },
          "size": { "type": "integer", "format": "int32" },
          "content": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/SleeveResponse" }
          },
          "number": { "type": "integer", "format": "int32" },
          "sort": { "$ref": "#/components/schemas/SortObject" },
          "numberOfElements": { "type": "integer", "format": "int32" },
          "empty": { "type": "boolean" }
        }
      },
      "PageableObject": {
        "type": "object",
        "properties": {
          "paged": { "type": "boolean" },
          "pageNumber": { "type": "integer", "format": "int32" },
          "pageSize": { "type": "integer", "format": "int32" },
          "unpaged": { "type": "boolean" },
          "offset": { "type": "integer", "format": "int64" },
          "sort": { "$ref": "#/components/schemas/SortObject" }
        }
      },
      "SortObject": {
        "type": "object",
        "properties": {
          "sorted": { "type": "boolean" },
          "unsorted": { "type": "boolean" },
          "empty": { "type": "boolean" }
        }
      }
    }
  }
}
